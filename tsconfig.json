{
	"extends": "@pnxdxt/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/utils/*": ["src/utils/*"],
			"@/pages/*": ["src/pages/*"],
			"@/api/*": ["src/pages/api/*"],
			"@/public/*": ["public/*"],
			"@/styles/*": ["src/styles/*"],
			"@/server/*": ["src/server/*"],
			"@/router/*": ["src/server/router/*"],
			"@/data/*": ["src/data/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"additional.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js"
	],
	"exclude": ["node_modules"]
}
